{# Configure the cookie #}
{% set cookie = create({
    'class': 'yii\\web\\Cookie',
    'name': 'hide-inventory-from-sidebar',
    'value': 'yes',
    'expire': now | date_modify('+10 years').timestamp
}) %}

{# Set the cookie #}
{% do craft.app.response.cookies.add(cookie) %}

{# Redirect to utility page #}
{% redirect cpUrl('utilities/inventory?welcome=1') %}
